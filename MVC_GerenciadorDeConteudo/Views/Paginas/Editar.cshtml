@{ 
    Business.Pagina pagina = ViewBag.Pagina;
}
<div class="jumbotron">
    <h3>Nova Pagina</h3>
    <div>
        <a href="/paginas" class="btn brn-default">Voltar</a>
    </div>

    <form action="/paginas/@pagina.Id/alterar" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" value="@pagina.Nome"name="nome">
        </div>
        <div class="form-group">
            <label for="data">Data:</label>
            <input type="datetime" class="form-control" id="data" value="@pagina.Data" name="data">
        </div>
        <div class="form-group">
            <label for="conteudo">Conteudo:</label>
           
        <script src="https://cdn.tiny.cloud/1/zaglhy77m76dxiinjibl68ek0o4r8j2whm82vnmmmobof723/tinymce/5/tinymce.min.js"></script> @*STRING PARA CAMPO DE EDIÇÃO NO MENU ALTERAR*@
            <script>tinymce.init({ selector: 'textarea' });</script>
            <textarea id="conteudo" name="conteudo" class="form-control">@pagina.Conteudo</textarea>
        </div>
        <button type="submit" class="btn btn-default">Alterar</button>
    </form>
    
</div>

@*//FORMULARIO DE ALTERAR PARA O BANCO DE DADOS.*@
