@{
    ViewBag.Title = "Paginas";
    List<Business.Pagina> paginas = ViewBag.Paginas;
}



@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success">@TempData["Sucesso"] </div>
}



@if  (TempData["Erro"] != null)
{
    <div class="alert alert-danger">@TempData["Erro"] </div>
}


<div class="jumbotron">
    <h3>ASP.NET</h3>
    <div>
        <a href="/paginas/novo" class="btn brn-default">Nova Pagina</a>
    </div>
    <table class="table">
        <tr>
            <td>ID</td>
            <td>Nome</td>
            <td>Data</td>
            <td>Render</td>
            <td>Render Nvelocity</td>
            <td></td>


        </tr>
        @foreach (var p in paginas)
        {
    <tr>
        <td>   @p.Id</td>
        <td>   @p.Nome</td>
        <td>   @p.Data</td>
        <!--<td>   @Html.Raw(p.Conteudo)</td>--> <!--METODO 1 - PARA RENDERIZAR O CONTEUDO-->
        <td>
            @*RENDERIZAR O CONTEUDO*@
            <a href="/paginas/@p.Id/preview" target="_blank" class="btn btn-warning">Preview</a>
        </td>
        <td>
            @*RENDERIZAR O CONTEUDO*@
            <a href="/paginas/@p.Id/preview-dinamico" target="_blank" class="btn btn-warning">Preview Dinamico</a>
        </td>

        <td>
            @*// ALTERAR DADOS*@
            <a href="/paginas/@p.Id/editar" class="btn btn-primary">Alterar Dados</a>
        </td>

        @*EXCLUSÃO DE DADOS*@
        <td>
            <a href="/paginas/@p.Id/excluir" class="btn btn-danger" onclick="ValidadeExclusao(@p.Id, event)">Excluir Dados</a>
        </td>


    </tr>
        }
    </table>
</div>


